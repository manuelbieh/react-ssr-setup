printWidth: 100
singleQuote: true
tabWidth: 4
trailingComma: es5
semi: true
arrowParens: always
quoteProps: consistent
parser: babel

overrides:
  - files: "*.{ts,tsx}"
    options:
      parser: typescript
  - files: "*.json"
    options:
      tabWidth: 2
  - files: "*.yml"
    options:
      tabWidth: 2
